#! /usr/bin/env node

var fs = require('fs')
var path = require('path')
var mock = require('../index')
var rt = process.cwd()

var config = {
    tasks: {
        help (ctx, next) {
            return {
                data: 0,
                message: 'npm/mock'
            }
        }
    },
    mapping: {
        help: [
            '*'
        ]
    }
}

if (fs.existsSync(path.resolve(rt, './mock'))) {
    config = require('./mock')
}

mock.start(config)